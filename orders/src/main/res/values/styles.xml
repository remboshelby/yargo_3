<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="orderDetailStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="MainPriceValue">
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="MainProductName">
        <item name="android:fontFamily" tools:targetApi="16">sans-serif</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MainPriceTitle">
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ButtonYellow">
        <item name="android:background">@drawable/ym_btn_primary_rounded</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TopHeaderTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="InstructionTopLevelHeader" parent="TopHeaderTextStyle">
        <item name="android:layout_marginTop">@dimen/margin_tom_instruction_text_view</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_instruction_text_view</item>
        <item name="android:layout_marginStart">@dimen/margin_left_instruction_text_view</item>
        <item name="android:layout_marginEnd">@dimen/margin_right_instruction_text_view</item>
    </style>
    <style name="InstructionTopLevelSubHeader">
        <item name="android:layout_marginTop">@dimen/margin_tom_instruction_text_view</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_instruction_text_view</item>
        <item name="android:layout_marginStart">@dimen/margin_left_instruction_text_view</item>
        <item name="android:layout_marginEnd">@dimen/margin_right_instruction_text_view</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>